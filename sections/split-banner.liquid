{{ 'custom.css' | asset_url | stylesheet_tag }}

<div class="split-banner" data-section-id="{{ section.id }}" 
     style="{% if section.settings.background_color != blank %}background-color: {{ section.settings.background_color }};{% endif %}
            {% if section.settings.text_color != blank %}color: {{ section.settings.text_color }};{% endif %}
            padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;">
  
  <div class="split-banner__grid" style="gap: {{ section.settings.content_gap }}px;">
    {%- if section.settings.image != blank -%}
      <div class="split-banner__image-container">
        <img src="{{ section.settings.image | img_url: '1000x' }}" 
             alt="{{ section.settings.image.alt | escape }}" 
             class="split-banner__image">
      </div>
    {%- endif -%}
    
    <div class="split-banner__content" style="align-items: {{ section.settings.content_alignment }};">
      {%- if section.settings.heading != blank -%}
        <h2 class="split-banner__heading" style="text-align: {{ section.settings.heading_alignment }}; color: {{ section.settings.text_color }};">{{ section.settings.heading }}</h2>
      {%- endif -%}
      
      {%- if section.settings.subheading != blank -%}
        <div class="split-banner__subheading" style="text-align: {{ section.settings.subheading_alignment }};">{{ section.settings.subheading }}</div>
      {%- endif -%}
      
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="cta-button">
          {{ section.settings.button_label }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Split Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Essentials for Thriving Health"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>From energy to recovery, we've got your backâ€”and every other muscle, joint, and cell in between.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "GET STARTED"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_left",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding left",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding right",
      "default": 20
    },
    {
      "type": "header",
      "content": "Content Alignment"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "subheading_alignment",
      "label": "Subheading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content items alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ],
      "default": "flex-start"
    },
    {
      "type": "range",
      "id": "content_gap",
      "min": 0,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Content gap spacing",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Split Banner",
      "category": "Image with text",
      "settings": {
        "background_color": "#ffffff",
        "text_color": "#000000",
        "heading_alignment": "left",
        "subheading_alignment": "left",
        "content_alignment": "flex-start",
        "content_gap": 20
      }
    }
  ]
}
{% endschema %}