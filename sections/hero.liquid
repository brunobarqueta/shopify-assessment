{{ 'custom.css' | asset_url | stylesheet_tag }}

<div class="supplements-hero" style="background-color: {{ section.settings.bg_color }};">
  <div class="container">
    <div class="hero-content">
      {% if section.settings.hero_title_image %}
        <img
          src="{{ section.settings.hero_title_image | img_url: 'master' }}"
          alt="Hero Title Image"
          loading="lazy"
        >
      {% endif %}
      {% if section.settings.cta_label and section.settings.cta_link %}
        <a href="{{ section.settings.cta_link }}" class="cta-button">
          {{ section.settings.cta_label }}
        </a>
      {% endif %}
    </div>
    {% if section.settings.hero_image %}
      <img
        src="{{ section.settings.hero_image | img_url: 'master' }}"
        alt="Hero Image"
        loading="lazy"
        class="hero-image"
      >
    {% endif %}
  </div>

  <div class="usps-wrapper">
    <div class="container usps">
      {% for block in section.blocks %}
        <div class="usp">
          {% if block.settings.icon %}
            <img src="{{ block.settings.icon | img_url: 'medium' }}" alt="USP Icon" loading="lazy">
          {% endif %}
          <div class="usp-text">
			{% if block.settings.heading %}
				<h4>{{ block.settings.heading }}</h4>
			  {% endif %}
			  {% if block.settings.description %}
				<p>{{ block.settings.description }}</p>
			  {% endif %}
		  </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Supplement Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "image_picker",
      "id": "hero_title_image",
      "label": "Hero Title Image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "CTA Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    }
  ],
  
  "blocks": [
    {
      "type": "usp",
      "name": "USP",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "High-Quality"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Science-Backed Formulas"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Supplement Hero"
    }
  ]
}
{% endschema %}
